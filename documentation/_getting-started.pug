.grid__row
  .grid__column
    section#sub-getting-started(data-section)
      h1.typo__h1(:class="`color--${color}`") Getting started
      hr.typo__hr

      .grid__row
        .grid__column
          h2.typo__h2(:class="`color--${color}`") Installation

          h3.typo__h3(:class="`color--${color}`") via npm
          pre.language-bash
            code.
              npm install vue-swatches --save

          h3.typo__h3(:class="`color--${color}`") via yarn
          pre.language-bash
            code.
              yarn add vue-swatches

          h3.typo__h3(:class="`color--${color}`") via CDN
          pre.language-html
            code
              :escape-html
                <link rel="stylesheet" href="https://unpkg.com/vue-swatches@1/dist/vue-swatches.min.css">
                <script src="https://unpkg.com/vue-swatches@1"></script>

      .grid__row
        .grid__column
          h2.typo__h2(:class="`color--${color}`") Basic usage
          pre.language-html
            code
              :escape-html
                <!-- Vue component -->
                <template>
                  <div>
                    <swatches v-model="color" />
                  </div>
                </template>

                <script>
                  import Swatches from 'vue-swatches'

                  // Import the styles too, globally
                  import "vue-swatches/dist/vue-swatches.min.css"

                  export default {
                    components: { Swatches }, // window.VueSwatches.default - from CDN
                    data () {
                      return {
                        color: '#1CA085'
                      }
                    }
                  }
                </script>
